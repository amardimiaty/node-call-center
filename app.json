{
	"name": "node-click-to-call",
	"description": "Bandwidth API Sample App Click to call",
	"logo": "https://avatars2.githubusercontent.com/u/12057884?v=3&s=200",
	"keywords": [
		"node",
		"bandwidth",
		"click",
		"calls",
		"buttons"
	],
	"buildpacks": [
		{
			"url": "https://github.com/heroku/heroku-buildpack-cli.git"
		}
	],
	"addons": ["mongolab:sandbox"],
	"private": false,
	"env": {
		"BANDWIDTH_USER_ID": {
			"description": "Your Bandwidth User Id"
		},
		"BANDWIDTH_API_TOKEN": {
			"description": "Your Bandwidth Api Token"
		},
		"BANDWIDTH_API_SECRET": {
			"description": "Your Bandwidth Api Secret"
		},
		"AUTH0_DOMAIN": {
			"description": "Your domain on Auth0 for authentification"
		},
		"AUTH0_CLIENT_ID": {
			"description": "Auth0 client id"
		},
		"AUTH0_CLIENT_SECRET": {
			"description": "Auth0 client secret"
		}
	},
	"scripts": {
		"postdeploy": "heroku config:set HEROKU_URL=$(heroku apps:info -s  | grep web_url | cut -d= -f2)"
	}
}
